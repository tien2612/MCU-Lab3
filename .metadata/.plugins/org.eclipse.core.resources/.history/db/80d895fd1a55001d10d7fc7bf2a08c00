#include "main.h"
#include "led7seg.h"

uint8_t segmentNumber[10] = {0xC0, 0xF9, 0xA4, 0xB0, 0x99, 0x92, 0x82, 0xF8, 0x80, 0x90};

void update7SEG(int index, int number){
	switch(index) {
		case 0:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 1:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 2:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 3:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		default:
			break;
	}
}

void display7SEG(int num) {
	HAL_GPIO_WritePin(GPIOB, SEG0_Pin | SEG1_Pin | SEG2_Pin | SEG3_Pin
						| SEG4_Pin | SEG5_Pin | SEG6_Pin, segmentNumber[0]);
}
