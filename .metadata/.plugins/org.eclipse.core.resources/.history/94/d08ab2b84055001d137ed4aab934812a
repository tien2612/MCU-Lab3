#include "main.h"
#include "traffic_light_processing.h"
#include "input_reading.h"
#include "input_processing.h"
#include "global.h"

void traffic_light_processing() {
	switch(status) {
	case NORMAL_MODE:

		break;
	case RED_MODE:
		HAL_GPIO_TogglePin(GPIOA, D4_Pin);
		HAL_GPIO_TogglePin(GPIOA, D1_Pin);
		break;
	case AMBER_MODE
		HAL_GPIO_TogglePin(GPIOA, D2_Pin);
		HAL_GPIO_TogglePin(GPIOA, D5_Pin);
		break;
	case GREEN_MODE:
		HAL_GPIO_TogglePin(GPIOA, D3_Pin);
		HAL_GPIO_TogglePin(GPIOA, D6_Pin);
		break;
	}
}
