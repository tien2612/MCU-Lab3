#include "main.h"
#include "led7seg.h"

static uint8_t led7SegValueConversion[15] = {
		0x3F,
		0x06,
		0x5B,
		0x4F,
		0x66,
		0x6D,
		0x7D,
		0x07,
		0x7F,
		0x6F,
		0x77,
		0x7C,
		0x39,
		0x5E,
		0x79,
		0x71
};

void update7SEG(int index, int number){
	switch(index) {
		case 0:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 1:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 2:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		case 3:
			HAL_GPIO_WritePin(GPIOA, EN0_Pin | EN1_Pin | EN2_Pin | EN3_Pin, OFF_7SEG); // turn all led off
			display7SEG(number);
			break;
		default:
			break;
	}
}

void display7SEG(int num) {
	HAL_GPIO_WritePin(GPIOA, SEG0_Pin | SEG1_Pin | SEG2_Pin | SEG3_Pin | SEG4_Pin | SEG5_Pin | SEG6_Pin, led7SegValueConversion[0]);
}
