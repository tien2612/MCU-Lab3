#ifndef SRC_TIMER_C_
#define SRC_TIMER_C_

#include "main.h"
#include "input_processing.h"
#include "input_reading.h"
#include "software_timer.h"
#include "button.h"
#include "led7seg.h"
int index = 0;
void HAL_TIM_PeriodElapsedCallback (TIM_HandleTypeDef *htim ) {
	if (htim->Instance == TIM2) {
		button_reading();
		timerRun();
		getKeyInput();
		if (index_led >= 4) index_led = 0;
		update7SEG(index);
		index++;
	}
}

#endif /* SRC_TIMER_C_ */
